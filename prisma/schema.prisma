generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Staff {
  id            Int       @id @default(autoincrement())
  code          String
  police_number String
  name          String
  position      String
  department    String
  contact       String
  vehicle       String?
  skills        Json
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  Team          Team[]    @relation("TeamLeader")
  TeamMembers   TeamMember[]
  PatrolStaffAssignments PatrolStaffAssignment[]
}

model Team {
  id         Int          @id @default(autoincrement())
  team_name  String
  leader_id  Int?
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt
  leader     Staff?       @relation("TeamLeader", fields: [leader_id], references: [id])
  TeamMembers TeamMember[]
  day_schedules    Schedule[] @relation("DayTeam")
  night_schedules  Schedule[] @relation("NightTeam")
}

model TeamMember {
  id        Int    @id @default(autoincrement())
  team_id   Int
  staff_id  Int
  team      Team   @relation(fields: [team_id], references: [id])
  staff     Staff  @relation(fields: [staff_id], references: [id])
}

model Vehicle {
  id           Int       @id @default(autoincrement())
  code         String
  plate_number String
  vehicle_type String
  brand_model  String
  status       String
  usage_status String
  department   String?
  user_id      Int?
  borrow_time  DateTime?
  return_time  DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  PatrolVehicleAssignments PatrolVehicleAssignment[]
}

model PatrolTeam {
  id         Int      @id @default(autoincrement())
  team_name  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  PatrolVehicleAssignments PatrolVehicleAssignment[]
  PatrolStaffAssignments PatrolStaffAssignment[]
  schedules    PatrolSchedule[] @relation("PatrolTeam")
}

model PatrolVehicleAssignment {
  id             Int      @id @default(autoincrement())
  patrol_team_id Int
  vehicle_id     Int
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  patrol_team    PatrolTeam @relation(fields: [patrol_team_id], references: [id])
  vehicle        Vehicle @relation(fields: [vehicle_id], references: [id])
}

model PatrolStaffAssignment {
  id                 Int      @id @default(autoincrement())
  patrol_team_id     Int
  staff_id           Int
  shift              String   // 用于标识早班、中班或晚班
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
  patrol_team        PatrolTeam @relation(fields: [patrol_team_id], references: [id])
  staff              Staff @relation(fields: [staff_id], references: [id])
}

model Schedule {
  id             Int      @id @default(autoincrement())
  day_team_id    Int
  night_team_id  Int
  schedule_date  DateTime
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now()) @updatedAt
  day_team       Team     @relation("DayTeam", fields: [day_team_id], references: [id])
  night_team     Team     @relation("NightTeam", fields: [night_team_id], references: [id])
}

model PatrolSchedule {
  id             Int      @id @default(autoincrement())
  patrol_team_id Int
  schedule_date  DateTime
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  patrol_team    PatrolTeam     @relation("PatrolTeam", fields: [patrol_team_id], references: [id])
}

model WorkFocus {
  id         Int      @id @default(autoincrement())
  focus_date DateTime
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model IncidentAnalysis {
  id                Int      @id @default(autoincrement())
  incident_number   String
  receiver          String
  report_time       DateTime
  contact_number    String
  reporter          String
  incident_category String
  report_source     String
  incident_location String
  incident_details  String
  incident_status   String
  response_time     DateTime
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}

model RecentDuties {
  id         Int      @id @default(autoincrement())
  duty_date  DateTime
  duty_type  String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
